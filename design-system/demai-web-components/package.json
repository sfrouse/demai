{
    "name": "demai-web-components",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "type": "module",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "npm run build:tokens && npm run build:preview && npm run build:types && npm run build:comps",
        "build:comps": "node ./scripts/build.mjs && npm run build:cdefs && npm run build:yalc",
        "build:tokens": "node ./scripts/tokens.mjs",
        "build:types": "tsc --emitDeclarationOnly --declaration --project tsconfig.json",
        "build:cdefs": "npx component-definitions build --source=src/**/*{.d.ts,.ts} --dest=./dist/cdef --css-url=../tokens/tokens.css --js-url=../index.js --token-lookup-url=../tokens/tokensLookup.json",
        "build:preview": "npx component-definitions preview --file=./dist/preview/index.html --js=../index.js --css=../tokens/tokens.css --cdef=../cdef",
        "build:figma": "figma connect publish -r ./dist/cdef",
        "build:storybook": "storybook build",
        "build:yalc": "yalc publish && yalc push",
        "server": "http-server ./dist -p 1234 --cors=* -c-1",
        "lint": "npx component-definitions lint",
        "validate": "node --experimental-json-modules ./scripts/definitions/jsonSchemaLoading.mjs",
        "generate": "lit labs gen --framework=react --out ./ --package ./",
        "storybook": "storybook dev -p 6006",
        "start": "npm run watch",
        "dev": "npm run watch",
        "test:exp": "node ./oneSheet/outputs/ctf-experience.js",
        "watch": "npm run build:tokens && npm run build:preview && nodemon --watch ./src --watch ./www -e ts,html,scss,mjs --exec \"npm run build:preview && npm run build:comps\""
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@chromatic-com/storybook": "^1.3.3",
        "@contentful/experiences-sdk-react": "^1.2.0",
        "@custom-elements-manifest/analyzer": "^0.9.0",
        "@figma/code-connect": "^0.1.1",
        "@figma/plugin-typings": "^1.99.0",
        "@figma/widget-typings": "^1.9.1",
        "@lit-labs/cli": "^0.6.2",
        "@lit-labs/gen-wrapper-react": "^0.3.1",
        "@lit/react": "^1.0.3",
        "@storybook/addon-essentials": "^8.0.10",
        "@storybook/addon-links": "^8.0.10",
        "@storybook/addon-webpack5-compiler-swc": "^1.0.2",
        "@storybook/blocks": "^8.0.10",
        "@storybook/test": "^8.0.10",
        "@storybook/web-components": "^8.0.10",
        "@storybook/web-components-webpack5": "^8.0.10",
        "@types/react": "^18.2.28",
        "chalk": "^5.3.0",
        "demai-component-definitions": "file:.yalc/demai-component-definitions",
        "demai-design-system-core": "file:.yalc/demai-design-system-core",
        "esbuild": "^0.19.5",
        "esbuild-plugin-copy": "^2.1.1",
        "esbuild-sass-plugin": "^2.16.0",
        "http-server": "^14.1.1",
        "lit": "^3.0.0",
        "lit-element": "^4.0.0",
        "nodemon": "^3.0.1",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "reflect-metadata": "^0.1.13",
        "storybook": "^8.0.10",
        "style-dictionary": "^3.9.0",
        "style-dictionary-utils": "^2.0.1",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "@exodus/schemasafe": "^1.3.0"
    }
}
